{
  "plugins": ["react", "react-hooks", "prettier", "@typescript-eslint"],
  "extends": ["eslint:recommended", "next", "next/core-web-vitals", "prettier"],
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": "warn",
    "no-use-before-define": "error",
    "no-unused-vars": "error"
  }
}
